<%- include("partials/header"); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <input
      type="text"
      name="postTitle"
      class="form-control"
      id="inputTitle"
      placeholder=""
      maxlength="15"
    />
    <label>Post</label>
    <textarea
      name="postBody"
      class="form-control"
      id="textArea"
      rows="6"
    ></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer"); -%>
